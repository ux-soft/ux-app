{
  "compilerOptions": {

    "target": "ESNext",                       // Versión de ECMAScript a la que compilar
    "module": "ESNext",                       // Módulo a utilizar
    "moduleResolution": "Node",               // Resolución de módulos estilo Node
    "strict": true,                           // Habilita todas las comprobaciones de tipo estricto
    "esModuleInterop": true,                  // Permite interoperabilidad entre módulos
    "skipLibCheck": true,                     // Omite la verificación de archivos de definición
    "forceConsistentCasingInFileNames": true,// Asegura consistencia en nombres de archivo

//    "outDir": "./dist",                       // Directorio de salida para archivos compilados
//    "rootDir": "./",                          // Directorio raíz del código fuente
//    "baseUrl": ".",                           // Base para resolver módulos
    "paths": {
      "*": ["node_modules/*", "src/*"]        // Resolución de módulos
    },

    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,

  },
  "include": [
    "packages/common/components/shell/src/*"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ]
}